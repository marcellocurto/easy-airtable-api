{
  "name": "easy-airtable-api",
  "version": "0.0.2",
  "description": "An easy way to connect to Airtable via their API.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "vitest"
  },
  "keywords": [
    "airtable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/marcellocurto/easy-airtable-api.git"
  },
  "homepage": "https://github.com/marcellocurto/easy-airtable-api",
  "author": "Marcello Curto",
  "license": "MIT",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "singleAttributePerLine": false,
    "bracketSameLine": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "printWidth": 80
  },
  "devDependencies": {
    "@types/node": "20.5.9",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "dotenv": "^16.3.1",
    "eslint": "8.51.0",
    "typescript": "5.2.2",
    "vitest": "0.34.4"
  }
}
